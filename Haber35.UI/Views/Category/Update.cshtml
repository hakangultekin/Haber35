@using Haber35.UI.Models.VMs.Category
@model CategoryUpdateVM


@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Page-Title -->
<div class="row">
    <div class="col-sm-12">
        <div class="page-title-box">
            <div class="row">
                <div class="col">
                    <h4 class="page-title">Kategori Düzenle</h4>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Anasayfa</a></li>
                        <li class="breadcrumb-item active">Kategori Düzenle</li>
                    </ol>
                </div><!--end col-->
            </div><!--end row-->
        </div><!--end page-title-box-->
    </div><!--end col-->
</div><!--end row-->
<!-- end page title end breadcrumb -->


<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-body">
                <form asp-action="Update" method="post">
                    <input type="text" asp-for="Id" hidden readonly />
                    <div class="form-group row">
                        <div class="col col-xl-12 col-md-12">
                            <label asp-for="CategoryName">Kategori Adı</label>
                            <input type="text" asp-for="CategoryName" class="form-control" placeholder="Kategori Adı" />
                            <span asp-validation-for="CategoryName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">
                            <i class="mdi mdi-launch"></i> Kategori Düzenle
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>