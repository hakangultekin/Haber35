@using Haber35.UI.Models.VMs
@model LoginVM
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="utf-8" />
    <title>Giriş</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta content="Login Screen" name="description" />
    <meta content="" name="author" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <!-- App favicon -->
    <link rel="shortcut icon" href="~/AdminAssets/assets/images/favicon.ico">

    <!-- App css -->
    <link href="~/AdminAssets/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/AdminAssets/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <link href="~/AdminAssets/assets/css/app.min.css" rel="stylesheet" type="text/css" />
    <link href="~/AdminAssets/css/login.css" rel="stylesheet" type="text/css" />
    <link href="~/AdminAssets/assets/vendor/daterangepicker/daterangepicker.css" rel="stylesheet" type="text/css" />

</head>

<body class="account-body accountbg">

    <!-- Log In page -->
    <div class="container">
        <div class="row vh-100 d-flex justify-content-center">
            <div class="col-12 align-self-center">
                <div class="row">
                    <div class="col-lg-5 mx-auto">
                        <div class="card">
                            <div class="card-body p-0 auth-header-box">
                                <div class="text-center p-3">
                                    <a asp-controller="Home" asp-action="Index" class="logo logo-admin">
                                        <img src="~/images/placeholder/logoyeni.png" height="50" alt="logo" class="auth-logo">
                                    </a>
                                    <h4 class="mt-3 mb-1 font-weight-semibold text-white font-18">Devam etmek için giriş yapın.</h4>
                                </div>
                            </div>
                            <div class="card-body">
                                <ul class="nav-border nav nav-pills" role="tablist">
                                    <li class="nav-item">
                                        <span class="nav-link active font-weight-semibold">Giriş Yap</span>
                                    </li>
                                </ul>
                                <div class="px-3 pt-3">
                                    <form class="form-horizontal auth-form my-4" asp-action="Login" asp-controller="Home" method="post">
                                        <div class="form-group">
                                            <label for="Email">Email Adresi</label>
                                            <div class="input-group mb-3">
                                                <input type="text" class="form-control" asp-for="Email" placeholder="Email adresiniz">
                                            </div>
                                        </div><!--end form-group-->

                                        <div class="form-group">
                                            <label for="Password">Şifre</label>
                                            <div class="input-group mb-3">
                                                <input type="password" class="form-control" asp-for="Password" placeholder="Şifre">
                                            </div>
                                        </div><!--end form-group-->

                                        <div class="form-group row mt-4">
                                            <div class="col-sm-6">
                                                <div class="custom-control custom-switch switch-success">
                                                    <input type="checkbox" class="custom-control-input" asp-for="RememberMe">
                                                    <label class="custom-control-label text-muted" for="RememberMe">Oturumu Açık Tut</label>
                                                </div>
                                            </div><!--end col-->
                                            @*<div class="col-sm-6 text-right">
                                                <a asp-action="ResetPasswordRequest" class="text-muted font-13"><i class="dripicons-lock"></i> Şifremi Unuttum?</a>
                                            </div><!--end col-->*@
                                        </div><!--end form-group-->

                                        <div class="form-group mb-0 row">
                                            <div class="col-12 mt-2">
                                                <button class="btn btn-primary btn-block waves-effect waves-light" type="submit">Giriş Yap <i class="fas fa-sign-in-alt ml-1"></i></button>
                                            </div><!--end col-->
                                        </div> <!--end form-group-->
                                    </form><!--end form-->

                                    <div class="m-3 text-center text-muted">
                                        <p class="">Hesabınız yok mu ?  <a asp-action="Register" class="text-primary ml-2">Kayıt Olun</a></p>
                                    </div>

                                </div>
                            </div><!--end card-body-->
                        </div><!--end card-->
                    </div><!--end col-->
                </div><!--end row-->
            </div><!--end col-->
        </div><!--end row-->
    </div><!--end container-->
    <!-- End Log In page -->
    <!-- jQuery  -->
    <script src="~/AdminAssets/assets/js/jquery.min.js"></script>
    <script src="~/AdminAssets/assets/js/bootstrap.bundle.min.js"></script>
    <script src="~/AdminAssets/assets/js/waves.js"></script>
    <script src="~/AdminAssets/assets/js/feather.min.js"></script>
    <script src="~/AdminAssets/assets/js/simplebar.min.js"></script>

    <partial name="_ValidationScriptsPartial"></partial>
    @await Component.InvokeAsync("Notyf")
</body>

</html>
