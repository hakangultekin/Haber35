@using System.Security.Claims

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no" />
    <title>@ViewData["Title"]</title>
    <!-- App favicon -->
    <link rel="shortcut icon" href="~/AdminAssets/assets/images/favicon.ico">

    <!-- App css -->
    <link href="~/AdminAssets/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/AdminAssets/assets/css/jquery-ui.min.css" rel="stylesheet">
    <link href="~/AdminAssets/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <link href="~/AdminAssets/assets/css/metisMenu.min.css" rel="stylesheet" type="text/css" />
    <link href="~/AdminAssets/assets/css/app.min.css" rel="stylesheet" type="text/css" />


    <!-- ToastR Alerts-->
    @*<link type="text/css" href="~/assets/vendor/toastr.min.css" rel="stylesheet">*@

    <link rel="stylesheet" href="~/AdminAssets/css/site.css" />
    @await RenderSectionAsync("Styles", required: false)

</head>
<body class="dark-sidenav">
    <!-- Left Sidenav -->
    <div class="left-sidenav">
        <!-- LOGO -->
        <div class="brand">
            <a href="#" class="logo">
                <span>
                    <img src="~/AdminAssets/logo.svg" alt="logo-small" class="logo-sm">
                </span>
                <span>
                    <img src="~/AdminAssets/assets/images/logo.png" alt="logo-large" class="logo-lg logo-light" style="height:36px !important">
                    @*<img src="assets/images/logo-dark.png" alt="logo-large" class="logo-lg logo-dark">*@
                </span>
            </a>
        </div>
        <!--end logo-->
        <div class="menu-content h-100" data-simplebar>
            <ul class="metismenu left-sidenav-menu">
                <li class="menu-label mt-0">Main</li>
                <li>
                    <a asp-controller="Personel" asp-action="Index"> <i data-feather="home" class="align-self-center menu-icon"></i><span>Anasayfa</span></a>
                </li>

                <li>
                    <a href="javascript: void(0);"><i data-feather="grid" class="align-self-center menu-icon"></i><span>Talep Oluştur</span><span class="menu-arrow"><i class="mdi mdi-chevron-right"></i></span></a>
                    <ul class="nav-second-level" aria-expanded="false">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Personel" asp-action="GunlukIzinTalebi"><i class="ti-control-record"></i>Günlük İzin</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Personel" asp-action="SaatlikIzinTalebi"><i class="ti-control-record"></i>Saatlik İzin</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Personel" asp-action="AvansTalebi"><i class="ti-control-record"></i>Avans Talebi</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Personel" asp-action="HarcamaTalebi"><i class="ti-control-record"></i>Harcama Talebi</a>
                        </li>
                    </ul>
                </li>

                <li>
                    <a href="javascript: void(0);"><i data-feather="crosshair" class="align-self-center menu-icon"></i><span>Taleplerim</span><span class="menu-arrow"><i class="mdi mdi-chevron-right"></i></span></a>
                    <ul class="nav-second-level" aria-expanded="false">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Personel" asp-action="IzinTaleplerim"><i class="ti-control-record"></i>İzinlerim</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Personel" asp-action="AvansTaleplerim"><i class="ti-control-record"></i>Avanslarım</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Personel" asp-action="HarcamaTaleplerim"><i class="ti-control-record"></i>Harcamalarım</a>
                        </li>
                    </ul>
                </li>

                <hr class="hr-dashed hr-menu"/>
                <li>
                    <a href="#"><i class="fas fa-users" style="color: #7081b9 !important"></i><span>Çalışma Arkadaşlarım</span></a>
                </li>
            </ul>
        </div>
    </div>
    <!-- end left-sidenav-->

    <div class="page-wrapper">
        <!-- Top Bar Start -->
        <div class="topbar">
            <!-- Navbar -->
            <nav class="navbar-custom">
                <ul class="list-unstyled topbar-nav float-right mb-0">
                    <li class="dropdown">
                        <a class="nav-link dropdown-toggle waves-effect waves-light nav-user" data-toggle="dropdown" href="#" role="button"
                           aria-haspopup="false" aria-expanded="false">
                            <span class="ml-1 nav-user-name hidden-sm">@User.Claims.First(z => z.Type == "FirstName").Value</span>
                            <img src="@User.Claims.First(z => z.Type == "ImagePath").Value" alt="profile-user" class="rounded-circle" />
                        </a>
                        <div class="dropdown-menu dropdown-menu-right">
                            <a class="dropdown-item" asp-controller="Personel" asp-action="Index"><i data-feather="user" class="align-self-center icon-xs icon-dual mr-1"></i> Hesabım</a>
                            <a class="dropdown-item" href="#"><i data-feather="settings" class="align-self-center icon-xs icon-dual mr-1"></i> Ayarlar</a>
                            <div class="dropdown-divider mb-0"></div>
                            <a class="dropdown-item" asp-controller="Home" asp-action="LogOut"><i data-feather="power" class="align-self-center icon-xs icon-dual mr-1"></i> Çıkış</a>
                        </div>
                    </li>
                </ul><!--end topbar-nav-->

                <ul class="list-unstyled topbar-nav mb-0">
                    <li>
                        <button class="nav-link button-menu-mobile">
                            <i data-feather="menu" class="align-self-center topbar-icon"></i>
                        </button>
                    </li>
                </ul>
            </nav>
            <!-- end navbar-->
        </div> <!-- Top Bar End -->
        <!-- Page Content-->
        <div class="page-content">

            <!-- Main Container -->
            <div class="container-fluid">
                @RenderBody()
            </div> <!-- Main Container END -->

            <footer class="footer text-center text-sm-left">
                &copy; 2020 Dastyle <span class="d-none d-sm-inline-block float-right">Crafted with <i class="mdi mdi-heart text-danger"></i> by Mannatthemes</span>
            </footer><!--end footer-->
        </div>
        <!-- end page content -->
    </div>
    <!-- end page-wrapper -->
    <!-- jQuery  -->
    <script src="~/AdminAssets/assets/js/jquery.min.js"></script>
    <script src="~/AdminAssets/assets/js/bootstrap.bundle.min.js"></script>
    <script src="~/AdminAssets/assets/js/metismenu.min.js"></script>
    <script src="~/AdminAssets/assets/js/waves.js"></script>
    <script src="~/AdminAssets/assets/js/feather.min.js"></script>
    <script src="~/AdminAssets/assets/js/simplebar.min.js"></script>
    <script src="~/AdminAssets/assets/js/jquery-ui.min.js"></script>
    <script src="~/AdminAssets/assets/js/moment.js"></script>


    <!-- App js -->
    <script src="~/AdminAssets/assets/js/app.js"></script>


    <!-- Toastr -->
    <script src="~/AdminAssets/assets/vendor/toastr.min.js"></script>
    <script src="~/AdminAssets/assets/js/toastr.js"></script>

    @* <script src="~/lib/jquery/dist/jquery.min.js"></script>*@
    @*<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>*@

    <script src="~/AdminAssets/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @await Component.InvokeAsync("Notyf")

</body>
</html>
