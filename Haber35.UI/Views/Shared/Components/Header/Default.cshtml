@using Haber35.UI.Models.VMs.Category
@model List<CategoryListVM>

<header class="bg-light">
    <!-- Navbar  -->
    @if (User.Identity.IsAuthenticated)
    {
        <div class="topbar d-none d-sm-block">
            <div class="container ">
                <div class="row">
                    <div class="col-sm-12 col-md-5">
                        <div class="topbar-left">
                            <div class="topbar-text">
                                Hoşgeldiniz <span style="color:#950711">@User.Identity.Name</span> - @DateTime.Now.ToString("dd.MM.yyyy")
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-7">
                        <div class="list-unstyled topbar-right">
                            <ul class="topbar-link">
                                <li><a asp-controller="Article" class="btn btn-sm btn-outline-danger" asp-action="Create">Yeni Haber Ekle</a></li>
                                <li><a asp-controller="Admin" asp-action="Index">Yönetim Paneli</a></li>
                                <li><a asp-action="LogOut">Çıkış Yap</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }



    <!-- Navbar menu  -->
    <div class="navigation-wrap navigation-shadow bg-white">
        <nav class="navbar navbar-hover navbar-expand-lg navbar-soft">
            <div class="container">
                <div class="offcanvas-header">
                    <div data-toggle="modal" data-target="#modal_aside_right" class="btn-md">
                        <span class="navbar-toggler-icon"></span>
                    </div>
                </div>
                <figure class="mb-0 mx-auto">
                    <a asp-action="Index">
                        <img src="~/images/placeholder/logoyeni.png" width="200" alt="" class="img-fluid logo">
                    </a>
                </figure>

                <div class="collapse navbar-collapse justify-content-between" id="main_nav99">
                    <ul class="navbar-nav ml-auto ">
                        <li class="nav-item dropdown">
                            <a class="nav-link active dropdown-toggle" href="#" data-toggle="dropdown"> Kategoriler </a>
                            <ul class="dropdown-menu dropdown-menu-left">
                                @foreach (var item in Model)
                                {
                                    <li>
                                        <a class="dropdown-item" asp-controller="Home" asp-action="CategoryArticles" asp-route-id="@item.Id"> @item.CategoryName </a>
                                    </li>
                                }
                            </ul>
                        </li>

                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item"><a style="color:#950711;" class="nav-link" asp-action="Login"> Giriş Yap </a></li>
                            <li class="nav-item"><a style="color:#950711;" class="nav-link" asp-action="Register"> Kayıt Ol </a></li>
                        }
                    </ul>


                    <div class="top-search navigation-shadow">
                        <div class="container">
                            <div class="input-group ">
                                <form action="#">

                                    <div class="row no-gutters mt-3">
                                        <div class="col">
                                            <input class="form-control border-secondary border-right-0 rounded-0"
                                                   type="search" value="" placeholder="Search " id="example-search-input4">
                                        </div>
                                        <div class="col-auto">
                                            <a class="btn btn-outline-secondary border-left-0 rounded-0 rounded-right"
                                               href="/search-result.html">
                                                <i class="fa fa-search"></i>
                                            </a>
                                        </div>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
                    <!-- Search content bar -->
                </div> <!-- navbar-collapse -->
            </div>
        </nav>
    </div>
    <!-- End Navbar menu  -->
    <!-- Navbar sidebar menu  -->
    <div id="modal_aside_right" class="modal fixed-left fade" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-dialog-aside" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <a asp-action="Index">
                        <img src="~/images/placeholder/logoyeni.png" width="200" alt="" class="img-fluid logo">
                    </a>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <nav class="list-group list-group-flush">
                        <ul class="navbar-nav ">
                            <li class="nav-item dropdown">
                                <a class="nav-link active dropdown-toggle text-dark" href="#" data-toggle="dropdown">
                                    Kategoriler
                                </a>
                                <ul class="dropdown-menu dropdown-menu-left">
                                    @foreach (var cat in Model)
                                    {
                                        <li>
                                            <a class="dropdown-item text-dark" asp-action="CategoryArticles" asp-route-id="@cat.Id"> @cat.CategoryName </a>
                                        </li>
                                    }
                                </ul>
                            </li>

                            @if (!User.Identity.IsAuthenticated)
                            {
                                <li class="nav-item"><a style="color:#950711;" class="nav-link" asp-action="Login"> Giriş Yap </a></li>
                                <li class="nav-item"><a style="color:#950711;" class="nav-link" asp-action="Register"> Kayıt Ol </a></li>
                            }
                            else
                            {
                                <li class="nav-item"><a style="color:#950711;" class="nav-link" asp-controller="Article" asp-action="Create"> Yeni Haber Ekle </a></li>
                                <li class="nav-item"><a style="color:#950711;" class="nav-link" asp-controller="Admin" asp-action="Index">Yönetim Paneli</a></li>
                                <li class="nav-item"><a style="color:#950711;" class="nav-link" asp-action="LogOut">Çıkış Yap</a></li>
                            }
                        </ul>

                    </nav>
                </div>
                <div class="modal-footer">
                    <p>
                        © 2022 <a href="#" title="by HakanGultekin">Hgultekin</a>
                        -
                        Bu site Hakan Gültekin tarafından 35inch için iş başvurusu amacıyla yapılmıştır. <a href="#" title="hgultekin">Hgultekin</a>.
                    </p>
                </div>
            </div>
        </div> <!-- modal-bialog  -->
    </div> <!-- modal -->
    <!-- End Navbar sidebar menu  -->
    <!-- End Navbar  -->
</header>